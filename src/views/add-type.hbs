  <!-- navbar-expand-lg: Membuat navbar responsif dengan layout horizontal pada layar besar -->
  <!-- custom-navbar: Kelas khusus untuk styling navbar -->
  <!-- py-3: Padding vertikal dengan ukuran 3 -->
  <div class="container-fluid px-5">
    <!-- container-fluid: Mengatur kontainer agar melebar penuh dalam grid Bootstrap -->
    <!-- px-5: Padding horizontal dengan ukuran 5 -->
    <a class="navbar-brand ms-3" href="https://m.mobilelegends.com/" target="_blank">
      <!-- navbar-brand: Kelas untuk mengatur branding atau logo dalam navbar -->
      <!-- ms-3: Margin kiri dengan ukuran 3 -->
      <img src="https://static.wikia.nocookie.net/mobile-legends/images/e/e6/Site-logo.png" height="40px" alt="Logo Mobile Legend">
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <!-- navbar-toggler: Tombol untuk toggle navbar pada layar kecil -->
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <!-- collapse navbar-collapse: Membuat menu navbar bisa di-toggle -->
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <!-- navbar-nav: Kelas untuk mengatur daftar navigasi dalam navbar -->
        <!-- me-auto: Margin kanan otomatis untuk menggeser item lain ke kanan -->
        <!-- mb-2: Margin bawah dengan ukuran 2 -->
        <!-- mb-lg-0: Menghapus margin bawah pada layar besar -->
        <li class="nav-item ms-4">
          <!-- nav-item: Kelas untuk mengatur item dalam daftar navigasi -->
          <!-- ms-4: Margin kiri dengan ukuran 4 -->
          <a class="nav-link active" aria-current="page" href="/"  style="color: white; !important">Heroes</a>
          <!-- nav-link: Kelas untuk mengatur link dalam navigasi -->
          <!-- active: Kelas untuk menandakan link yang aktif -->
          <!-- aria-current: Menandakan halaman saat ini untuk pembaca layar -->
        </li>
        <li class="nav-item ms-4">
          <a class="nav-link" href="#" style="color: white; !important">Skins</a>
        </li>
        <li class="nav-item ms-4">
          <a class="nav-link" href="#" style="color: white; !important">Events</a>
        </li>
      </ul>
      <!-- btn: Kelas untuk membuat tombol dengan styling Bootstrap -->
      <!-- custom-btn: Kelas khusus untuk styling tombol -->
      <!-- nav-collapse: Menentukan bahwa ini adalah item yang bisa collapse -->
      <!-- ms-4: Margin kiri dengan ukuran 4 -->
    </div>
  </div>
</nav>

<!-- Container untuk membungkus form -->
<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card p-4">
        <h2 class="text-center mb-4"><b>Add Hero Type</b></h2>
        <form name="projectForm" method="post" action="/add-type">
          <div class="mb-3">
            <label for="inputProjectName" class="form-label">Hero Type</label>
            <input type="text" class="form-control input-contact2" id="inputProjectName" name="name" placeholder="Input Hero Type" required>
          </div>

          <table style="width: 100%;">
            <tr>
              <td style="text-align: left;">
                <a href="/" class="btn btn-dark" style="width: 40%;">Back</a>
              </td>
              <td style="text-align: right;">
                <input type="submit" value="Submit" class="btn btn-dark" style="width: 40%;">
              </td>
            </tr>
          </table>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="container py-4 bg-light rounded">
  <!-- Div baru untuk List Hero Type title -->
  <div class="hero-type-header">
    <h3 style="font-weight: bold;">List Hero Type:</h3>
  </div>
  
  <!-- Div baru untuk List Hero Type content -->
  <div class="hero-type-list">
    <ul class="list-group">
      {{#each types}}
        <li class="list-group-item d-flex justify-content-between align-items-center">
          {{this.name}}
          <span>
            <button class="btn btn-warning btn-sm" onclick="showUpdateForm('{{this.id}}', '{{this.name}}')">Update</button>
            <form method="post" action="/delete/{{this.id}}" style="display: inline;">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </span>
        </li>
      {{/each}}
    </ul>
  </div>

  <!-- Form untuk Update Hero Type -->
  <div id="updateFormContainer" style="display: none;">
    <form id="updateForm" method="post" action="">
      <div class="mb-3">
        <label for="updateHeroType" class="form-label mt-5" >Update Hero Type</label>
        <input type="text" class="form-control" id="updateHeroType" name="name" placeholder="Enter new hero type" required>
      </div>
      <button type="submit" class="btn btn-primary">Update</button>
    </form>
  </div>
</div>

<script>
  function showUpdateForm(id, name) {
    const updateFormContainer = document.getElementById('updateFormContainer');
    const updateForm = document.getElementById('updateForm');
    const updateHeroType = document.getElementById('updateHeroType');

    updateFormContainer.style.display = 'block';
    updateHeroType.value = name;
    updateForm.action = `/update/${id}`;
  }
</script>




<!-- Import Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
