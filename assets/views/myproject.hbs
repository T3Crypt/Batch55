<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Projects</title>
  <!-- Import icon dari eksternal, site: fontawesome -->
  <script src="https://kit.fontawesome.com/a8c9218c8f.js" crossorigin="anonymous"></script>
  <!-- Import font dari eksternal, site: googlefont -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <!-- Import internal CSS -->
  <link rel="stylesheet" href="/assets/css/index.css">
  <link rel="stylesheet" href="/assets/css/myproject.css">
  <!-- Import Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body style="background-color: #dddddd; font-family: 'Poppins', Arial, sans-serif; font-size: 20px;">

<!-- Navigation bar -->
<nav class="navbar navbar-expand-lg custom-navbar py-3">
  <div class="container-fluid px-5">
    <a class="navbar-brand ms-3" href="https://www.dumbways.id" target="_blank">
      <img src="/assets/img/logo-dumbways.png" height="40px" alt="Logo Dumbways">
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item ms-4">
          <a class="nav-link active" aria-current="page" href="/">Home</a>
        </li>
        <li class="nav-item ms-4">
          <a class="nav-link" href="/myproject">My Project</a>
        </li>
        <li class="nav-item ms-4">
          <a class="nav-link" href="/testimonial">Testimonials</a>
        </li>
      </ul>
      <a href="/contact" class="btn custom-btn nav-collapse ms-4">Contact Me</a>
    </div>
  </div>
</nav>

<!-- Projects Section -->
<div class="container my-5">
  <h1 class="text-center mb-4">MY PROJECT</h1>
  <div class="row">
    {{#each projects}}
      <div class="col-md-4 mb-4">
        <div class="card project-card">
          <img src="/assets/img/{{this.image}}" class="card-img-top" alt="Project Image"/>
          <div class="card-body">
            <h5 class="card-title">
              <!-- Menggunakan <a> untuk mengarahkan ke halaman detail proyek -->
              <a href="/myproject/{{@index}}" class="btn btn-link project-title">{{this.inputProjectName}}</a>
            </h5>
            <p class="card-text">
              <small class="text-muted">Start Date: {{this.startDate}} - End Date: {{this.endDate}}</small>
            </p>
            <p class="card-text">{{this.inputDescription}}</p>
            <p class="card-text">Technologies:
              {{#each this.technologies}}
                <span class="badge bg-secondary">{{this}}</span>
              {{/each}}
            </p>
            <div class="d-flex justify-content-between">
              <a href="/update-project/{{@index}}" class="btn btn-warning">Update</a>
              <form action="/delete-project/{{@index}}" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
  <div class="text-center mt-4">
    <a href="/add-project" class="btn btn-primary">Add New Project</a>
  </div>
</div>
<!-- End of Projects Section -->



<!-- Import JS -->
<script src="/assets/js/myproject.js"></script>
<!-- Import Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
