<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Project</title>
  <!-- Import icon dari eksternal, site: fontawesome -->
  <script src="https://kit.fontawesome.com/a8c9218c8f.js" crossorigin="anonymous"></script>
  <!-- Import font dari eksternal, site: googlefont -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <!-- Import internal CSS -->
  <link rel="stylesheet" href="/assets/css/index.css">
  <link rel="stylesheet" href="/assets/css/myproject.css">
  <!-- Import Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body style="background-color: #dddddd; font-family: 'Poppins', Arial, sans-serif; font-size: 20px;">

<!-- Navigation bar -->
<nav class="navbar navbar-expand-lg custom-navbar py-3">
  <div class="container-fluid px-5">
    <a class="navbar-brand ms-3" href="https://www.dumbways.id" target="_blank">
      <img src="/assets/img/logo-dumbways.png" height="40px" alt="Logo Dumbways">
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item ms-4">
          <a class="nav-link active" aria-current="page" href="/">Home</a>
        </li>
        <li class="nav-item ms-4">
          <a class="nav-link" href="/myproject">My Project</a>
        </li>
        <li class="nav-item ms-4">
          <a class="nav-link" href="/testimonial">Testimonials</a>
        </li>
      </ul>
      <a href="/contact" class="btn custom-btn nav-collapse ms-4">Contact Me</a>
    </div>
  </div>
</nav>

<!-- Container untuk membungkus form -->
<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card p-4">
        <h2 class="text-center mb-4"><b>ADD MY PROJECT</b></h2>
        <form class="form-contact2" method="post" action="/add-project">
          <div class="mb-3">
            <label for="inputProjectName" class="form-label">Project Name</label>
            <input type="text" class="form-control input-contact2" id="inputProjectName" name="inputProjectName" placeholder="Input your project name">
          </div>
          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="inputStartDate" class="form-label">Start Date</label>
              <input type="date" class="form-control input-contact2" id="inputStartDate" name="startDate">
            </div>
            <div class="col-md-6 mb-3">
              <label for="inputEndDate" class="form-label">End Date</label>
              <input type="date" class="form-control input-contact2" id="inputEndDate" name="endDate">
            </div>
          </div>
          <div class="mb-3">
            <label for="inputDescription" class="form-label">Description</label>
            <textarea class="form-control input-contact2" id="inputDescription" name="inputDescription" placeholder="Input your description"></textarea>
          </div>
          <label class="form-label">Technologies</label>
          <div class="mb-3">
            <div class="row">
              <div class="col-6">
                <div class="form-check">
                  <input type="checkbox" id="techNodeJs" name="technologies" value="Node.js" class="form-check-input input-checkbox">
                  <label for="techNodeJs" class="form-check-label">Node Js</label>
                </div>
              </div>
              <div class="col-6">
                <div class="form-check">
                  <input type="checkbox" id="techNextJs" name="technologies" value="Next.js" class="form-check-input input-checkbox">
                  <label for="techNextJs" class="form-check-label">Next Js</label>
                </div>
              </div>
              <div class="col-6">
                <div class="form-check">
                  <input type="checkbox" id="techReactJs" name="technologies" value="React.js" class="form-check-input input-checkbox">
                  <label for="techReactJs" class="form-check-label">React Js</label>
                </div>
              </div>
              <div class="col-6">
                <div class="form-check">
                  <input type="checkbox" id="techTypeScript" name="technologies" value="TypeScript" class="form-check-input input-checkbox">
                  <label for="techTypeScript" class="form-check-label">TypeScript</label>
                </div>
              </div>
            </div>
          </div>
          <div class="mb-3">
            <label for="inputImage" class="form-label">Upload Image</label>
            <input type="file" id="inputImage" name="inputImage" class="form-control input-file">
          </div>
          <div class="d-grid">
            <input type="submit" value="Submit" class="btn submit-contact2 btn-dark">
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Import JS -->
<script src="/assets/js/myproject.js"></script>
<!-- Import Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
